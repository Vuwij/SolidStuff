<table class = "model table table-hover">
  <tr>
    <th style = "width:20%;">Name</th>
    <th style = "width:20%">Price</th>
    <th style = "width:40%">Description</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.price %></td>
      <td><%= article.description %></td>
    </tr>
  <% end %>
</table>

