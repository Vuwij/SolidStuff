<div class = "menu_bar">
	<h1>Solid Stuff</h1>
	<p>Simple Marketplace where you can buy and sell 3D models</p>

	<!-- Static navbar -->
	<nav class="navbar navbar-default">
	    <div class="container-fluid">
	        <div class="navbar-header">
	            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	              	<span class="sr-only">Toggle navigation</span>
	             	<span class="icon-bar"></span>
	              	<span class="icon-bar"></span>
	              	<span class="icon-bar"></span>
	            </button>
	            <a class="navbar-brand" href="#">3D Models</a>
	        </div>
	        <div id="navbar" class="navbar-collapse collapse">
	            <ul class="nav navbar-nav">
	              	<li class="active"><%= link_to 'View Models', controller: 'welcome' %></li>
	              	<li><a data-toggle="modal" data-target="#upload">Upload</a></li>
	            </ul>
	            <ul class="nav navbar-nav navbar-right">
	            	<% if signed_in? %>
	            	Signed in as: <%= current_user.email %>
	            	<%= button_to 'Sign out', sign_out_path, method: :delete %>
	            	<% else %>
	            	<li><a data-toggle="modal" data-target="#signIn">Sign In</a></li>
	            	<li><a data-toggle="modal" data-target="#register">Register</a></li>
	            	<% end %>
	            	<div id="flash">
	            	    <% flash.each do |key, value| %>
	            	        <div class="flash <%= key %>"><%= value %></div>
	            	    <% end %>
	            	</div>
	            </ul>
	        </div><!--/.nav-collapse -->
	    </div><!--/.container-fluid -->
	</nav>

</div>

<%= render 'welcome/modals' %>